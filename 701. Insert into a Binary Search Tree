/**
* author: Darshika
* Question Link: https://leetcode.com/problems/insert-into-a-binary-search-tree/
* Time Complexity: O(h)
* Space Complexity: O(h) - recursive space
*/

/**
 * Definition for a binary tree node.
 * public class TreeNode {
 *     int val;
 *     TreeNode left;
 *     TreeNode right;
 *     TreeNode() {}
 *     TreeNode(int val) { this.val = val; }
 *     TreeNode(int val, TreeNode left, TreeNode right) {
 *         this.val = val;
 *         this.left = left;
 *         this.right = right;
 *     }
 * }
 */
class Solution {
    public TreeNode insertIntoBST(TreeNode root, int val) {
        if(root == null) {
            TreeNode node = new TreeNode(val);
            return node;
        }
        helper(root,null,val);
        return root;
    }
    
    private void helper(TreeNode root, TreeNode parent,int val){
        if(root == null){
            TreeNode node = new TreeNode(val);
            if(val > parent.val) {
                parent.right = node;
            }else{
                parent.left = node;
            }
            return;
        }
        if(root.val < val) {
            helper(root.right,root,val);
        }else{
            helper(root.left,root,val);
        }
    }
}
