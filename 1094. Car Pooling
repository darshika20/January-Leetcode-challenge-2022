/**
* author: Darshika
* Question Link: https://leetcode.com/problems/car-pooling/
* Time Complexity: O(n)
* Space Complexity: O(max(n,1001))
*/

class Solution {
    public boolean carPooling(int[][] trips, int capacity) {
        int[] car = new int[1001];
        
        for(int i = 0;i<trips.length;i++){
            car[trips[i][1]] += trips[i][0];
            car[trips[i][2]] -= trips[i][0];
        }
        
        for(int passenger : car) {
            capacity -= passenger;
            if(capacity < 0){
                return false;
            }
        }
        return true;
    }
}
