/**
* author: Darshika
* Question Link: https://leetcode.com/problems/gas-station/
* Time Complexity: O(n)
* Space Complexity: O(1)
*/

class Solution {
    public int canCompleteCircuit(int[] gas, int[] cost) {
        int total = 0;
        int start = 0;
        int totalGas = 0;
        for(int i = 0;i<gas.length;i++){
            totalGas += gas[i] - cost[i];
            total += gas[i] - cost[i];
            if(total < 0){
                total = 0;
                start = i+1;
            }
        }
        if(totalGas < 0){
            return -1;
        }
        return start;
    }
}
